{% extends "publico_base.njk" %}
{% block titulo %}Crear cuenta{% endblock %}
{% block contenido %}
    <h1>Crear cuenta</h1>
    <form method="post" action="/auth/register">
        <div class="form-group mb-3">
            <label for="login">Usuario:
            </label>
            <input type="text" class="form-control" name="login" id="login" placeholder="Introduce tu usuario">
        </div>
        <div class="form-group mb-3">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary mb-3">Crear</button>
    </form>
    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error}} </div>
    {% endif %}
{% endblock %}