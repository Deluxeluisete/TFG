{% extends "admin_base.njk" %}
{% block titulo %}Juego | Nuevo{% endblock %}
{% block contenido %}

    {# enctype="multipart/form-data" #}
    {% if (juego.id.length > 0) %}
        <h1>Editar juego</h1>
        <form action="/juegos/{{ juego.id }}" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="nombre">Nombreee:</label>
                <input type="text" class="form-control" name="nombre" placeholder="Nombre del juego..." value="{{ juego.nombre }}"/>
            </div>
            <div class="form-group mb-3">
                <label for="descripcion">Descripcion:</label>
                <input type="text" class="form-control" name="descripcion" placeholder="descripcion del juego" value="{{ juego.descripcion }}"/>
            </div>
            <div class="form-group mb-3">
                <label for="jugadore">Jugadores:</label>
                <input type="number" class="form-control" name="jugadores" placeholder="jugadores del juego" value="{{ juego.jugadores }}"/>
            </div>
            <div class="form-group mb-3">
                <label for="edad">Edad:</label>
                <input type="number" class="form-control" name="edad" placeholder="edad del juego" value="{{ juego.edad }}"/>
            </div>
            <div class="form-group mb-3">
                <label for="tipo">Tipo:</label>
                <input type="text" class="form-control" name="tipo" placeholder="tipo del juego" value="{{ juego.tipo }}"/>
            </div>
            <div class="form-group mb-3">
                <label for="precio">Precio:</label>
                <input type="number" class="form-control" name="precio" placeholder="precio del juego" value="{{ juego.precio }}"/>
            </div>
            <div class="form-group mb-3">
                <label for="precio">Imagen:</label>
                <input type="file" class="form-control" name="imagen"
                placeholder="Imagen del juego..."/>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
        </form>
    {% else %}
        <h1>Nuevo juego</h1>
        <form action="/juegos" method="post">
            <div class="form-group mb-3">
                <label for="nombre">Nombre:</label>
                <input type="text" class="form-control" name="nombre" placeholder="Nombre del juego..." value="{{ juego.nombre }}"/>
            </div>
            <div class="form-group mb-3">
                <label for="descripcion">Descripcion:</label>
                <input type="text" class="form-control" name="descripcion" placeholder="descripcion del juego" value="{{ juego.descripcion }}"/>
            </div>
            <div class="form-group mb-3">
                <label for="jugadore">Jugadores:</label>
                <input type="number" class="form-control" name="jugadores" placeholder="jugadores del juego" value="{{ juego.jugadores }}"/>
            </div>
            <div class="form-group mb-3">
                <label for="edad">Edad:</label>
                <input type="number" class="form-control" name="edad" placeholder="edad del juego" value="{{ juego.edad }}"/>
            </div>
            <div class="form-group mb-3">
                <label for="tipo">Tipo:</label>
                <input type="text" class="form-control" name="tipo" placeholder="tipo del juego" value="{{ juego.tipo }}"/>
            </div>
            <div class="form-group mb-3">
                <label for="precio">Precio:</label>
                <input type="number" class="form-control" name="precio" placeholder="precio del juego" value="{{ juego.precio }}"/>
            </div>
            <div class="form-group mb-3">
                <label for="precio">Imagen:</label>
                <input type="file" class="form-control" name="imagen"
                placeholder="Imagen del libro..."/>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
        </form>
    {% endif %}

{% endblock %}